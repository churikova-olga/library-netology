<%- include("../partials/head", {title: title}) %>
<%- include("../partials/nav") %>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <%if (message.length) {%>
        <div class="alert alert-danger"> <%=message%> </div>
        <%}%>


        <h1 class="display-4" style="text-align: center"> Вход </h1>
        <div class="form-floating" style="width: 100%;display: flex;justify-content: center;margin: 30px 0px;">

            <form method="post" action="/user/login" style="width: 75%;padding: 30px 30px;border: 2px solid black;">

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="mb-3">

                    <label for="password" class="form-label">Пароль</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <p>Нет аккаунта? <a href="/user/signup">Регистрация</a></p>

                <button type="submit" class="btn btn-primary">Войти</button>

            </form>
        </div>
    </div>
</div>